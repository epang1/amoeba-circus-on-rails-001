<h1>Listing amoebas</h1>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Name</th>
      <th>Generation</th>
      <th>Talent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amoebas.each do |amoeba| %>
      <tr>
        <td><img src="/<%= amoeba.color %>_amoeba.jpg" width="75"></td>
        <td><%= link_to "#{amoeba.name}", amoeba %></td>
        <td><%= amoeba.generation %></td>
        <td><%= amoeba.talent.name %></td>
        <td><%= link_to 'Destroy', amoeba, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Amoeba', new_amoeba_path %>
